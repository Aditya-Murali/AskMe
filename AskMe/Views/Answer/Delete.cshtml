@model AskMe.Models.ViewModels.AnswerViewModels.AnswerDeleteViewModel

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-md-6 login-box text-center">
        <h3>Are you sure you want to delete this?</h3>
        <form asp-action="Delete">
            <div class="form-group mt-4 d-flex justify-content-between">
                <input type="hidden" asp-for="AnswerId" />
                <input type="submit" value="Delete" class="btn btn-danger px-4 py-2 rounded-0" />
                <a href="javascript:window.history.go(-1)" class="link-danger text-decoration-none py-2"><i class="fa fa-arrow-left"></i> Go Back</a>
            </div>
        </form>
    </div>
  </div>
</div>

