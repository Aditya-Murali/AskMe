@model AskMe.Models.ViewModels.AnswerViewModels.EditAnswerViewModel

@{
    ViewData["Title"] = "Edit an answer";
}

<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-md-6">
        <section class="login-box mt-2">
                <h5 class="text-secondary">Dashboard <small class="text-danger"><i class="fa fa-chevron-right"></i></small> Edit an answer</h5>
                <a href="javascript:window.history.go(-1)" class="link-danger text-decoration-none py-2"><i class="fa fa-arrow-left"></i> Go Back</a>
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group mt-3">
                        <label asp-for="Statement"></label>
                        <input asp-for="Statement" class="form-control rounded-0" placeholder="Statement"/>
                        <span asp-validation-for="Statement" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                         <input type="hidden" asp-for="AnswerId" />
                    </div>
                    <div class="form-group mt-4">
                        <button type="submit" class="btn btn-primary px-4 py-2 rounded-0">Submit</button>
                    </div>
                </form>    
        </section>
    </div>
  </div>
</div>

 @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }