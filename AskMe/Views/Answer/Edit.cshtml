@model AskMe.Models.ViewModels.AnswerViewModels.EditAnswerViewModel

@{
    ViewData["Title"] = "Edit an answer";
}

<div class="container">
  <div class="row">
    <div class="col">
        <section>
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Statement"></label>
                        <input asp-for="Statement" class="form-control" placeholder="Statement"/>
                        <span asp-validation-for="Statement" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                         <input type="hidden" asp-for="AnswerId" />
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-red">Confirm</button>
                    </div>
                </form>    
        <section>
    </div>
  </div>
</div>

 @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }