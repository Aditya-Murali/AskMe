@model AskMe.Models.ViewModels.AccountViewModels.LoginViewModel

@{
    Layout = "_HomeLayout";
    ViewData["Title"] = "Sign in to AskMe";
}

<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-md-6">
        <section>
            <div class="text-center mt-5">
                <img src="images/Logo.png" width="150" height="150" />
                <h1 class="text-center">Sign in to <span class="text-primary">AskMe</span></h1>
            </div>
            <div class="login-box mt-2">
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control rounded-0" placeholder="Enter email address"/>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-3">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" class="form-control rounded-0" placeholder="Enter password"/>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary mt-4 py-1 px-4 rounded-0">Login</button>
                    </div>
                </form>    
            </div>
            <div class="mt-4 login-box text-center">
                <p>New to AskMe? <a asp-action="register" class="link-primary text-decoration-none">Create an account</a></p>
            </div>
        </section>
    </div>
  </div>
</div>

 @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }