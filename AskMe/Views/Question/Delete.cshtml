@model AskMe.Models.ViewModels.QuestionViewModels.QuestionDeleteViewModel

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <div class="row ">
        <div class="col-md-12">
            <h3>Are you sure you want to delete this?</h3>
        </div>
    </div>
    <div class="row no-gutters">
        <div class="col-md-3">
            <a class="danger">Cancel</a>
        </div>
        <div class="col-md-3">
            <form asp-action="Delete">
                <input type="hidden" asp-for="QuestionId" />
                <input type="submit" value="Delete" class="small-info-btn" />
            </form>
        </div>
    </div>
</div>
